rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    function hasRole(role) {
      return isSignedIn() && getUserData().role == role;
    }

    // Users collection
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isOwner(userId) 
                    && (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'createdAt']))
                    && (resource.data.role == request.resource.data.role);
      allow delete: if false;
    }

    // Astrologers collection
    match /astrologers/{astroId} {
      allow read: if isSignedIn();
      allow write: if isOwner(astroId) && hasRole('astrologer');
    }

    // Sessions collection
    match /sessions/{sessionId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow read: if isSignedIn() && (
        resource.data.userId == request.auth.uid || 
        resource.data.astroId == request.auth.uid
      );
      allow update: if isSignedIn() && (
        resource.data.userId == request.auth.uid || 
        resource.data.astroId == request.auth.uid
      );
    }

    // Reviews collection
    match /reviews/{reviewId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if false;
    }
  }
}
